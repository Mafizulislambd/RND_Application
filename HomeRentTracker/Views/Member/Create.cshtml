@using HomeRentTracker.Models.RenterEntity
@using HomeRentTracker.Models.Enumation
@model MemberInfo
<title></title>
@{
    ViewData["Title"] = "Create Member";
}
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h2>Create Member</h2>
            <form asp-action="Create" asp-controller="Member">
                <div class="row g-1">
                    <div class="form-group floating-label col-md-4">
                        <input asp-for="MemberName" class="form-control" placeholder="" />
                        <label asp-for="MemberName"></label>
                    </div>
                    <div class="form-group floating-label col-md-4">
                        <input asp-for="MemberAge" class="form-control" value="0" placeholder="" />
                        <label asp-for="MemberAge"></label>
                    </div>
                    <div class="form-group floating-label col-md-4">
                        <input asp-for="MemberPhone" class="form-control" placeholder="" />
                        <label asp-for="MemberPhone"></label>

                    </div>
                    <div class="form-group floating-label col-md-4">
                        <input asp-for="MemberEmail" class="form-control" placeholder="" />
                        <label asp-for="MemberEmail"></label>

                    </div>
                    <div class="form-group floating-label col-md-4">
                        <input asp-for="MemberNID" class="form-control" placeholder=""/>
                        <label asp-for="MemberNID"></label>

                    </div>
                    <div class="form-group floating-label col-md-4">
                        <input asp-for="MemberAddress" class="form-control" placeholder="" />
                        <label asp-for="MemberAddress"></label>
                    </div>
                @*     <div class="form-group floating-label col-md-4">
                        <input asp-for="MemberProfession" class="form-control" placeholder=""/>
                        <label asp-for="MemberProfession"></label>

                    </div> *@
                    <div class="form-group form-label-group floating-label in-border col-md-4">                      
                            <select asp-for="MemberProfession" class="form-control"
                                    asp-items="Html.GetEnumSelectList<Profession>()">
                                <option value="">-- Select Profession --</option>
                            </select>
                            <label asp-for="MemberProfession"></label>                        
                    </div>
                   
                    <div class="form-group floating-label col-md-4">
                        <input asp-for="GuardianID" class="form-control" placeholder="" />
                        <label asp-for="GuardianID"></label>
                    </div>
                    <div class="form-group floating-label col-md-4">
                        <input asp-for="GuardialNID" class="form-control" placeholder=""/>
                        <label asp-for="GuardialNID"></label>

                    </div>
                    <div class="form-group floating-label col-md-4">                       
                        <input asp-for="RelationWithGuardian" class="form-control" placeholder="" />
                        <label asp-for="RelationWithGuardian"></label>
                    </div>
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>
