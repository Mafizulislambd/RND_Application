@using HomeRentTracker.Models.FlatEntity
@model FlatViewModel

<h1 class="header-style">Flat Rent Recveive Entry</h1>
<hr />
<div class="row">
    <form asp-action="Create" class="row g-3">
        <div hidden class="col-md-6 form-group">
            <input asp-for="Flat.FlatId" class="form-control" />
        </div>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="col-md-6 form-group">
            <label asp-for="Flat.FlatNo" class="control-label"></label>
            <input asp-for="Flat.FlatNo" class="form-control" />
            <span asp-validation-for="Flat.FlatNo" class="text-danger"></span>
        </div>
        <div class="col-md-6 form-group select-wrapper">
            <label asp-for="Flat.FlatOwener" class="control-label"></label>
            <select asp-for="Flat.FlatOwener" class="form-control" asp-items="Model.OwnerList">
                <option value="">---Select---</option>
            </select>
            <span asp-validation-for="Flat.FlatOwener" class="text-danger"></span>
        </div>
        <div class="col-md-6 form-group">
            <label asp-for="Flat.FlatRent" class="control-label"></label>
            <input asp-for="Flat.FlatRent" class="form-control" />
            <span asp-validation-for="Flat.FlatRent" class="text-danger"></span>
        </div>
        <div class="col-md-6 form-group">
            <label asp-for="Flat.RentPaidBy" class="control-label"></label>
            <input asp-for="Flat.RentPaidBy" class="form-control" />
            <span asp-validation-for="Flat.RentPaidBy" class="text-danger"></span>
        </div>
        @*         <div class="col-md-2 form-group form-check">
        <label class="form-check-label">
        <input class="form-check-input" asp-for="RentReceive" />
        @Html.DisplayNameFor(model => model.RentReceive)
        </label>
        </div> *@
        <div class=" col-md-6 form-group">
            <label asp-for="Flat.RentReceiverName" class="control-label"></label>
            <input asp-for="Flat.RentReceiverName" class="form-control" />
            <span asp-validation-for="Flat.RentReceiverName" class="text-danger"></span>
        </div>

        <div class=" col-md-6 form-group">
            <label asp-for="Flat.RentMonth" class="form-label"></label>
            <input asp-for="Flat.RentMonth" type="month" class="form-control" />
            <span asp-validation-for="Flat.RentMonth" class="text-danger"></span>
        </div>
        <div class="col-md-6 form-group">
            <label asp-for="Flat.ReceiveDate" class="control-label"></label>
            <input asp-for="Flat.ReceiveDate" class="form-control" type="date" />
            <span asp-validation-for="Flat.ReceiveDate" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-primary" />
        </div>
    </form>

</div>

