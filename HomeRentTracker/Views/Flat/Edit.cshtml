@using HomeRentTracker.Models.FlatEntity
@model Flat

@{
    ViewData["Title"] = "Edit Flat";
}

<h1>Edit Flat</h1>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="FlatId" />
    <div class="row">
        <div class="col-md-6">
            <div class="mb-3">
                <label asp-for="FlatNo" class="form-label"></label>
                <input asp-for="FlatNo" class="form-control" />
                <span asp-validation-for="FlatNo" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="FlatOwener" class="form-label"></label>
                <input asp-for="FlatOwener" class="form-control" />
                <span asp-validation-for="FlatOwener" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="FlatRent" class="form-label"></label>
                <input asp-for="FlatRent" class="form-control" />
                <span asp-validation-for="FlatRent" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="RentPaidBy" class="form-label"></label>
                <input asp-for="RentPaidBy" class="form-control" />
                <span asp-validation-for="RentPaidBy" class="text-danger"></span>
            </div>
        </div>

        <div class="col-md-6">
            <div class="mb-3">
                <label asp-for="RentReceive" class="form-label"></label>
                <input asp-for="RentReceive" class="form-check-input" type="checkbox" />
                <span asp-validation-for="RentReceive" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="RentReceiverName" class="form-label"></label>
                <input asp-for="RentReceiverName" class="form-control" />
                <span asp-validation-for="RentReceiverName" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="ReceiveDate" class="form-label"></label>
                <input asp-for="ReceiveDate" type="date" class="form-control" />
                <span asp-validation-for="ReceiveDate" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="RentMonth" class="form-label"></label>
                <input asp-for="RentMonth" type="month" class="form-control" />
                <span asp-validation-for="RentMonth" class="text-danger"></span>
            </div>
        </div>
    </div>

    <button type="submit" class="btn btn-success">Update</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
